<%= form_for @user, url: {action: "create"}, html: {class: "form container #{@user.errors.empty? ? '' : ' form--invalid' }"} do |f| %>
  <h2>Регистрация нового аккаунта</h2>

  <div class="form__item<%= @user.errors[:email].empty? ? '' : ' form__item--invalid' %>">
    <%= f.label :email, 'E-mail*' %>
    <%= f.text_field :email, placeholder: "Введите e-mail" %>
    <% unless @user.errors[:email].empty? %>
      <span class="form__error">Введите e-mail</span>
    <% end %>
  </div>

  <div class="form__item<%= @user.errors[:password].empty? ? '' : ' form__item--invalid' %>">
    <%= f.label :password, 'Пароль*' %>
    <%= f.text_field :password, placeholder: "Введите пароль" %>
    <% unless @user.errors[:password].empty? %>
      <span class="form__error">Введите пароль</span>
    <% end %>
  </div>

  <div class="form__item<%= @user.errors[:name].empty? ? '' : ' form__item--invalid' %>">
    <%= f.label :name, 'Имя*' %>
    <%= f.text_field :name, placeholder: "Введите имя" %>
    <% unless @user.errors[:name].empty? %>
      <span class="form__error">Введите имя</span>
    <% end %>
  </div>

  <div class="form__item<%= @user.errors[:contact].empty? ? '' : ' form__item--invalid' %>">
    <%= f.label :contact, 'Контактные данные*' %>
    <%= f.text_area :contact, placeholder: "Напишите как с вами связаться" %>
    <% unless @user.errors[:contact].empty? %>
      <span class="form__error">Напишите как с вами связаться</span>
    <% end %>
  </div>

  <div class="form__item form__item--file form__item--last">
    <label>Аватар</label>
    <div class="preview">
      <button class="preview__remove" type="button">x</button>
      <div class="preview__img">
        <img src="/img/avatar.jpg" width="113" height="113" alt="Ваш аватар">
      </div>
    </div>

    <div class="form__input-file">
      <%= f.file_field :avatar_url, class: "visually-hidden" %>
      <%= f.label :avatar_url do %>
        <span>+ Добавить</span>
      <% end %>
    </div>
  </div>

  <span class="form__error form__error--bottom">Пожалуйста, исправьте ошибки в форме.</span>

  <%= f.submit "Зарегистрироваться", class: "button" %>

  <%= link_to 'Уже есть аккаунт', login_url, class: 'text-link' %>
<% end %>
